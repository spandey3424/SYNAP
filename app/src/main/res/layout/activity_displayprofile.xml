<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/skyblue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_perm_identity_black_24dp"
            android:id="@+id/dp"/>

        <View
            android:id="@+id/divider12"
            android:layout_width="match_parent"
            android:layout_below="@+id/dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#3944bc" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstnam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="15dp"
                android:hint=" First Name"
                android:inputType="textPersonName"
                android:textColor="#3944bc"
                android:textColorHint="#3944bc"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/middlenem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="15dp"
                android:hint=" Middle Name"
                android:inputType="textPersonName"
                android:textColor="#3944bc"
                android:textColorHint="#3944bc"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="15dp"
                android:hint=" Last Name"
                android:textColor="#3944bc"
                android:textColorHint="#3944bc"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:drawablePadding="15dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#3944bc"
                android:textColorHint="#3944bc"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:drawablePadding="15dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="#3944bc"
                android:textColorHint="#3944bc"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:drawablePadding="15dp"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:textColor="#3944bc"
                android:textColorHint="#3944bc"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="State :"
                android:textColor="#3944bc"
                android:textSize="20sp"
                android:id="@+id/state"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Blood Group :"
                android:textColor="#3944bc"
                android:textSize="20sp"
                android:id="@+id/blood"/>

            <TextView
                android:id="@+id/marital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="15dp"
                android:hint="Marital Status"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#3944bc"
                android:textColorHint="#3944bc"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="15dp"
                android:hint="Occupation"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#3944bc"
                android:textColorHint="#3944bc"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/qualifaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="15dp"
                android:hint="Qualification"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#3944bc"
                android:textColorHint="#3944bc"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"/>


                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"/>

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"/>

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"/>

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"/>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <Button
                android:id="@+id/updatebutton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative"
                android:layout_margin="20dp"
                android:background="@drawable/custom_button"
                android:foreground="?attr/selectableItemBackground"
                android:text="Update"
                android:textColor="#fff"
                android:textSize="20sp" />



        </LinearLayout>

    </ScrollView>


</LinearLayout>